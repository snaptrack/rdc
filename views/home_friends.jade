


block content
    head
        link(rel='stylesheet', href="/stylesheets/index.css")       
        link(rel='stylesheet', href="/stylesheets/lightbox.min.css")
        
        
        title= 'SnapTrack-FRIEND'
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js")
        script. 
            var array_luoghi= !{luoghi};
            var array_foto= !{photos};
            var feed= !{feed};
        script(src='../../javascripts/maps.js')
        meta(http-equiv='content-type', content='text/html; charset=UTF-8')
        meta(charset='utf-8')
        title Bootply snippet - Google Maps and Bootstrap 3
        meta(name='generator', content='Bootply')
        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
        meta(name='description', content="Need to explicitly set the height of map canvas, or make all of it's containers 100%")
        //link(href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css', rel='stylesheet')
        //if lt IE 9
          script(src='//html5shim.googlecode.com/svn/trunk/html5.js')
        link(rel='apple-touch-icon', href='/bootstrap/img/apple-touch-icon.png')
        link(rel='apple-touch-icon', sizes='72x72', href='/bootstrap/img/apple-touch-icon-72x72.png')
        link(rel='apple-touch-icon', sizes='114x114', href='/bootstrap/img/apple-touch-icon-114x114.png')
        // CSS code from Bootply.com editor
        style(type='text/css').
          /* all map containers must be full height */
          html, body, .container-fluid, .row, .map { height: 100% }
          #map-canvas {
          width:100%;
          height: 100%;
          height:calc(100% - 0px);
          }   
    body
    .container-fluid
      .row
        .col-md-3.col-sm-offset-1
          
          h1(id='name') #{name}
                hr
                div(id='image' )
                    img(class="img-circle" src= image)
                    
                br
                table
                    tr
                        td 
                            input(type='text' class="form-control" id='place' maxlenght='40' placeholder='search place')
                        td
                            button(name='place' class="btn btn-default" onclick='place()').
                                search
                    tr
                        td
                            button(id='home' class="btn btn-danger" onclick="location.assign('https://rdc-snaptrack.c9users.io/users/FBLogin/confirm')").
                                    Back
            // /col-6
          // /row
        // /col-5
        .col-md-8.map
          #googleMap.google-map-canvas        
        
                    
                            
        script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDVlcXoDh6ay1LExyuSdY9GcUDhfiyP5hk&callback=initMap' async defer)                    
        script(src="../../javascripts/lightbox-plus-jquery.min.js")                            
        script(type='text/javascript', src='../../javascripts/bootstrap.min.js')
    
        
       